<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="Attendance System" android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="교수님 저 왔습니다. : RESCAN"
        android:id="@+id/RESCANBUTTON2"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:enabled="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="stop"
        android:id="@+id/STOPBUTTON"
        android:layout_below="@+id/RESCANBUTTON2"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="absence"
        android:id="@+id/STATEBUTTON"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="absence"
        android:id="@+id/ABSENCE2"
        android:layout_below="@+id/STATEBUTTON"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:text="ELECTRIC CIRCUIT"
        android:id="@+id/textView5"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/STATEBUTTON" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="check"
        android:id="@+id/button"
        android:layout_below="@+id/ABSENCE2"
        android:layout_alignParentEnd="true"
        android:onClick="onECTButtonClicked" />

</RelativeLayout>
